<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.exoplayer2.ui.StyledPlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#000"
        app:use_controller="true" />

    <TextView
        android:id="@+id/tv_engine_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择语音识别引擎："
        android:textSize="14sp"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

    <RadioGroup
        android:id="@+id/rg_engine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_engine_baidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="百度"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rb_engine_openai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OpenAI" />

        <RadioButton
            android:id="@+id/rb_engine_fake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地示例" />
    </RadioGroup>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未开始播放"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/tv_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="脏话统计：-"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <!-- 新增：命中列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_hits"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_choose_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/button_text_dark"
        android:text="开始检测" />

</LinearLayout>
